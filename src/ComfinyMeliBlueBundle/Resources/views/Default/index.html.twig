{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .panel-default{
            margin-bottom: 30px;
        }

    </style>
{% endblock %}


{% block body %}



    <div class="container" style="margin-top: 80px;">
        <div class="panel-group">
            {% for post in posts %}
            <div class="col-md-9 panel panel-default" style="margin-bottom: 40px;">
                <div class="panel-heading">
                    <h3>{{ post.title }}</h3>
                    <h5> Créé le {{ post.createdAt|date }}</h5>
                </div>
                <div class="col-md-9 panel-body">
                    {{ post.content }}
                </div>
                <div class="col-md-3">
                    <img src="" alt="image" align="right"/>
                </div>
            </div>

            {% else %} {# <- ceci est magique !#}
                Aucun article !
            {% endfor %}
        </div>
    </div>

</div>

<div class="col-md-9 panel "align="center">
    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active" {% endif %}>
                <a href="{{ path('blog_home', {'page': p}) }}" style="background: #595775; border-color: #595775" >{{ p }}</a>
            </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}
